<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.softmusic.songList.MusicSongListFragment"
        android:label="MusicSongListFragment" >
        <action
            android:id="@+id/action_musicSongListFragment2_to_musicSongFragment2"
            app:destination="@id/musicSongFragment2" />
    </fragment>
    <fragment
        android:id="@+id/play_song"
        android:name="com.example.softmusic.playMusic.MusicPlayFragment"
        android:label="MusicPlayFragment" />
    <fragment
        android:id="@+id/musicSongFragment2"
        android:name="com.example.softmusic.musicSong.MusicSongFragment"
        android:label="MusicSongFragment" >
<!--        A -> B -> C，C 返回时不会经过 B，而是直接回到 A-->
        <action
            android:id="@+id/action_musicSongFragment2_to_play_song"
            app:destination="@id/play_song"
            app:popUpTo="@id/musicSongFragment2"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>